{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitOnError": true,
    "lib": ["es2018", "dom"],
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "rootDir": "./node_modules/choices.js/src"
  },
  "include": ["./node_modules/choices.js/src/**/*.ts"],
  "exclude": ["./node_modules/choices.js/src/**/*.test.ts"]
}
